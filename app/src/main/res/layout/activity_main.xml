<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LIC (Comman separated value)" />

        <EditText
            android:id="@+id/etStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STAR (Comman separated value)" />

        <EditText
            android:id="@+id/etPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PA (Comman separated value)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Calculate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIC Total Premium" />

            <TextView
                android:id="@+id/tvLicTotalPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Star Total Premium" />

            <TextView
                android:id="@+id/tvStarTotalPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PA Total Premium" />

            <TextView
                android:id="@+id/tvPATotalPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Total Premium" />

            <TextView
                android:id="@+id/tvAllTotalPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etInvestmentYears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Investment Years" />

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate CAGR" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cal Monthly SIP"
            android:onClick="onClick1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIP Monthly" />

            <TextView
                android:id="@+id/tvSipMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total money invested through SIP" />

            <TextView
                android:id="@+id/tvSipTotalMoneyInvested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% of total investment per month" />

            <TextView
                android:id="@+id/tvSipPerPerMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>